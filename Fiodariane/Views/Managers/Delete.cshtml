@model Fiodariane.Models.Manager

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Manager</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Are you sure you want to delete this?</h3>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt class="line-height">
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd class="line-height">
                <div class="col-md-6">
                    <div class="col-md-4">@Html.DisplayFor(model => model.Name)</div>
                    <div class="col-md-2">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-actions no-color">
                                <input type="submit" value="Delete" class="btn btn-default" />
                            </div>
                        }
                    </div>
                </div>
            </dd>
        </dl>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
