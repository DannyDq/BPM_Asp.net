@model Fiodariane.Models.ProcessModels

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Process</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Are you sure you want to delete this?</h3>
    </div>
    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt class="line-height">
                @Html.DisplayNameFor(model => model.Name)
            </dt>

            <dd class="line-height">
                @Html.DisplayFor(model => model.Name)
            </dd>

            <dt class="line-height">
                Type
            </dt>

            <dd class="line-height">
                @if (Model.ParentID == null)
            {
                    @("Macro-Process")
                }
                else
                {
                    @("Process")
                }
            </dd>

            <dt class="line-height">
                @Html.DisplayNameFor(model => model.ParentID)
            </dt>

            <dd class="line-height">
                @Html.DisplayFor(model => model.Parent.Name)
            </dd>

            <dt class="line-height">
                @Html.DisplayNameFor(model => model.CreationTime)
            </dt>

            <dd class="line-height">
                @Html.DisplayFor(model => model.CreationTime)
            </dd>

            <dt class="line-height">&nbsp;</dt>

            <dd class="line-height">
                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" />
                    </div>
                }
            </dd>

        </dl>


    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>